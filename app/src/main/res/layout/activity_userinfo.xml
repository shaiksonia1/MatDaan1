<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F3C52"
    android:id="@+id/relativeLayout"
    tools:context=".Userinfo">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_user"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/profile_name"
        android:layout_marginTop="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_below="@id/profile_image"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#fff"
        >

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/profile_address"
            android:layout_marginTop="18dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/profile_addressfield"
            app:layout_constraintTop_toTopOf="@id/profile_address"
            app:layout_constraintStart_toEndOf="@id/profile_address"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_address"
            android:text="ADRESS of the user"
            android:layout_alignTop="@id/profile_address"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/profile_address"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/profile_nolabel"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number:"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/profilenumber"
            app:layout_constraintTop_toTopOf="@id/profile_nolabel"
            app:layout_constraintStart_toEndOf="@id/profile_nolabel"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_address"
            android:text="ADRESS of the user"
            android:layout_alignTop="@id/profile_address"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <View
            android:id="@+id/ruler1"
            app:layout_constraintTop_toBottomOf="@id/profile_nolabel"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"

            />

        <TextView
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ruler1"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/profile_fathernamelabel"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father's Name:"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/profilefathername"
            app:layout_constraintTop_toTopOf="@id/profile_fathernamelabel"
            app:layout_constraintStart_toEndOf="@id/profile_fathernamelabel"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_address"
            android:text="ADRESS of the user"
            android:layout_alignTop="@id/profile_address"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView

            app:layout_constraintTop_toBottomOf="@id/profile_fathernamelabel"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/profile_mothernamelabel"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's Name:"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/profilemothername"
            app:layout_constraintTop_toTopOf="@id/profile_mothernamelabel"
            app:layout_constraintStart_toEndOf="@id/profile_mothernamelabel"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_address"
            android:text="ADRESS of the user"
            android:layout_alignTop="@id/profile_address"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView

            app:layout_constraintTop_toBottomOf="@id/profile_mothernamelabel"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/profile_voteridlabel"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voter Id:"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/profilevoterid"
            app:layout_constraintTop_toTopOf="@id/profile_voteridlabel"
            app:layout_constraintStart_toEndOf="@id/profile_voteridlabel"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_address"
            android:text="ADRESS of the user"
            android:layout_alignTop="@id/profile_address"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/profile_voteridlabel"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/aadhaarlabel"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadhaar number:"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/profileaadhaar"
            app:layout_constraintTop_toTopOf="@id/aadhaarlabel"
            app:layout_constraintStart_toEndOf="@id/aadhaarlabel"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_address"
            android:text="ADRESS of the user"
            android:layout_alignTop="@id/profile_address"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <View
            android:id="@+id/ruler2"
            app:layout_constraintTop_toBottomOf="@id/aadhaarlabel"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            />

        <TextView

            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ruler2"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/votingstatuslabel"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voting Status:"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />

        <TextView
            android:id="@+id/profilevotingstatus"
            app:layout_constraintTop_toTopOf="@id/votingstatuslabel"
            app:layout_constraintStart_toEndOf="@id/votingstatuslabel"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_address"
            android:text="ADRESS of the user"
            android:layout_alignTop="@id/profile_address"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>